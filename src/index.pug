extends templates/base.pug

mixin link(link, text, tab)
	a(href=link rel="noreferrer noopener" target=tab ? "_blank" : null)&attributes(attributes)= text
		block

mixin showcase(heading, items)
	section.showcase
		h1.showcase__title= heading
		ul.showcase-items
			each item in items
				li.showcase-item
					+link(item.url, null, true)(class="showcase-item__link")
						span.showcase-item__emoji= item.emoji
						p.showcase-item__text
							b.showcase-item__name= item.name
							br
							span.showcase-item__description= item.description
	
