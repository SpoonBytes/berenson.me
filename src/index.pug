extends templates/base.pug

mixin link(link, text, tab = true)
	a(href=link rel="noreferrer noopener" target=tab ? "_blank" : null)&attributes(attributes)= text
		block

mixin content__link(link, text)
	+link(link, text)(class="content__link")
		block

mixin navigation(links)
	nav.content__navigation
		ul
			each link in links
				li
					+content__link(link.link, link.text)

