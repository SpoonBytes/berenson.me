extends templates/base.pug

mixin showcase(heading, items)
	section.showcase
		h1.showcase__title= heading
		ul.showcase-items
			each item in items
				li.showcase-item
					a.showcase-item__link(href=item.url target="_blank" rel="noopener noreferrer")
						span.showcase-item__emoji= item.emoji
						p.showcase-item__text
							b.showcase-item__name= item.name
							br
							span.showcase-item__description= item.description
	
