extends templates/base.pug

mixin link(link, text, tab = true)
	a(href=link rel="noreferrer noopener" target=tab ? "_blank" : null)&attributes(attributes)= text
		block

mixin section(heading)
	section.section
		h1.section__heading= heading
		
		block

mixin projects(projects)
	ul.projects
		each project in projects
			li.project
				small.project__emoji= project.emoji
				b.project__name= project.name
				p.project__description= project.description
				+link(project.link.link, project.link.text, project.link.tab)(class="project__link")
	
