extends templates/base.pug

mixin showcase(heading)
	section.showcase
		h1.showcase__heading= heading
		block

mixin showcase-items(items)
	ul.showcase-items
		each item in items
			li.showcase-item
				a.showcase-item__link(href=item.url target="_blank" rel="noopener")
					span.showcase-item__emoji= item.emoji
					p.showcase-item__text
						b.showcase-item__name= item.name
						br
						span.showcase-item__description= item.description

