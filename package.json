{
  "name": "berenson.me",
  "version": "1.0.0",
  "description": "My personal/portfolio website.",
  "scripts": {
    "build:clean": "rimraf dist",
    "build:pug": "pug src/pug/ --obj src/pug/globals.json --out dist/ && rimraf dist/templates",
    "build:scripts": "mkdirp dist/scripts && rollup -c",
    "build:styles": "mkdirp dist/styles && node-sass src/styles --output-style compressed --include-path node_modules --include-path src/styles/partials --output dist/styles",
    "build:fonts": "mkdirp dist/fonts &&cpx \"src/fonts/*\" \"dist/fonts\"",
    "build:images": "mkdirp dist/images && imagemin src/images/* --output dist/images",
    "prebuild": "npm run build:clean",
    "build": "run-p -c build:*",
    "watch:pug": "watch \"npm run build:pug\" src/pug",
    "watch:scripts": "watch \"npm run build:scripts\" src/scripts",
    "watch:styles": "watch \"npm run build:styles\" src/styles",
    "watch:fonts": "watch \"npm run build:fonts\" src/fonts",
    "watch:images": "watch \"npm run build:images\" src/images",
    "watch": "run-p -c watch:*",
    "predeploy": "npm run build",
    "deploy": "surge -p dist -d berenson.me",
    "postdeploy": "npm run clean"
  },
  "author": "Spencer Berenson",
  "license": "MIT",
  "devDependencies": {
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.1",
    "cpx": "^1.5.0",
    "imagemin-cli": "^3.0.0",
    "node-mkdirp": "0.0.1",
    "node-sass": "^4.5.2",
    "npm-run-all": "^4.0.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "rollup": "^0.45.2",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-includepaths": "^0.2.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "surge": "^0.19.0",
    "watch": "^1.0.2"
  },
  "dependencies": {
    "normalize-scss": "^7.0.0"
  }
}
