{
  "name": "berenson.me",
  "version": "1.0.0",
  "description": "My personal/portfolio website.",
  "scripts": {
    "clean": "shx rm -rf dist",
    "build:html": "shx cp *.html",
    "build:images": "shx cp -r src/images dist/images",
    "build:fonts": "shx cp -r src/styles/fonts dist/styles/fonts",
    "build:styles": "node-sass --includePaths src/styles/theme.css --output-style compressed --include-path node_modules | postcss --use autoprefixer > dist/styles/theme.bundle.css",
    "build:scripts": "rollup -c",
    "prebuild": "npm run clean",
    "build": "run-p -c build:*"
  },
  "author": "Spencer Berenson",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-cli": "^4.1.0",
    "rollup-plugin-babel": "^3.0.1",
    "rollup-plugin-commonjs": "^8.1.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "shx": "^0.2.2"
  }
}
