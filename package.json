{
  "name": "berenson.me",
  "version": "1.0.0",
  "description": "My personal/portfolio website.",
  "main": "gulpfile.js",
  "devDependencies": {
    "babel-preset-es2015": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "cpx": "^1.5.0",
    "font-awesome": "^4.7.0",
    "imagemin-cli": "^3.0.0",
    "node-sass": "^4.5.2",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^2.6.1",
    "simplifyify": "^3.2.1",
    "surge": "^0.19.0",
    "watch": "^1.0.2"
  },
  "browserify": {
    "transform": [
      "babelify",
      {
        "presets": [
          "es2015"
        ]
      }
    ]
  },
  "scripts": {
    "clean": "rimraf dist",
    "pug": "pug -O src/pug/globals.json src/pug/ -o dist/ && rimraf dist/templates",
    "scripts": "simplifyify -o dist/js src/js/*.js",
    "styles": "node-sass --output-style compressed --include-path node_modules src/styles/ -o dist/styles",
    "fonts": "cpx \"node_modules/font-awesome/fonts/*\" \"dist/fonts\"",
    "images": "imagemin src/img/*.{jpeg,jpg,png,svg,ico} -o dist/img",
    "prebuild": "npm run clean",
    "build": "npm run pug && npm run styles && npm run images && npm run fonts",
    "watch": "watch \"npm run build\" src",
    "predeploy": "npm run build",
    "deploy": "surge -p dist -d berenson.me",
    "postdeploy": "npm run clean"
  },
  "author": "Spencer Berenson",
  "license": "MIT"
}
